# AI Model Configuration
MODEL=gemini-2.5-pro
GEMINI_API_KEY=YOUR_GOOGLE_API_KEY

# Threat Intelligence API Keys
GTI_API_KEY=YOUR_VIRUSTOTAL_KEY
URLSCAN_API_KEY=YOUR_URLSCAN_KEY

# GTI MCP Server Configuration
USE_GTI_MCP=true
GTI_MCP_COMMAND=uv
GTI_MCP_PATH=/path/to/your/gti_mcp

# The MCP server will receive vt_apikey from GTI_API_KEY automatically
# MCP args will be constructed as: uv --directory <GTI_MCP_PATH> run server.py

# Debug Configuration
# Set to 'true' to enable API call logging for debugging
DEBUG_API_CALLS=false

# Optional: Debug output directory (defaults to ./debugs)
# DEBUG_OUTPUT_DIR=/path/to/debug/logs